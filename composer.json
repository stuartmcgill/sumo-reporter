{
    "name": "stuartmcgill/sumo-reporter",
    "description": "Uses the Sumo API to produce formatted reports",
    "license": "GPL-3.0-or-later",
    "autoload": {
        "psr-4": {
            "StuartMcGill\\SumoReporter\\": "src/"
        }
    },
    "autoload-dev" :
    {
        "psr-4" :
        {
            "StuartMcGill\\SumoReporter\\Tests\\": "tests/"
        }
    },
    "authors": [
        {
            "name": "Stuart McGill"
        }
    ],
    "require-dev": {
        "mikey179/vfsstream": "^1.6",
        "mockery/mockery": "^1.5",
        "php-parallel-lint/php-parallel-lint": "^1.3",
        "phpstan/phpstan": "^1.10",
        "phpstan/phpstan-mockery": "^1.1",
        "phpunit/phpunit": "^10.0"
    },
    "require": {
        "php": ">=8.2",
        "symfony/console": "^6.2",
        "guzzlehttp/guzzle": "^7.5",
        "laminas/laminas-servicemanager": "^3.15",
        "stuartmcgill/sumoapi-php": "^0.6"
    },
    "scripts": {
        "tests": "vendor/bin/phpunit tests",
        "phpstan": "vendor/bin/phpstan analyse"
    },
    "config": {
        "sort-packages": true
    }
}
